<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.WelcomeActivity"
    android:background="@color/colorBackgroundBlack"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            android:orientation="vertical">




            <TextView
                android:id="@+id/welcomePage_Welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:text="Recept title"
                android:textColor="@color/colorTextWhite"
                android:textSize="15dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/youraccount_textview_id"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"

                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="•"
                    android:textColor="@color/colorBackgroundGreen" />


                <TextView
                    android:id="@+id/youraccount_textview_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="200dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Ingredient 1"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextLightGrey" />

                <Button
                    android:id="@+id/subscribe_button_id"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:background="@color/colorBlack"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="+"
                    android:textColor="@color/colorBackgroundGreen" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/youraccount_textview_id"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"

                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="1 tablespoon"
                    android:textColor="@color/colorTextLightGrey" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/youraccount_textview_id"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"

                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="•"
                    android:textColor="@color/colorBackgroundGreen" />


                <TextView
                    android:id="@+id/youraccount_textview_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="200dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Ingredient 1"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextLightGrey" />

                <Button
                    android:id="@+id/subscribe_button_id"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:background="@color/colorBlack"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="+"
                    android:textColor="@color/colorBackgroundGreen" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/youraccount_textview_id"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"

                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="1 tablespoon"
                    android:textColor="@color/colorTextLightGrey" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/youraccount_textview_id"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"

                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="•"
                    android:textColor="@color/colorBackgroundGreen" />


                <TextView
                    android:id="@+id/youraccount_textview_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="200dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Ingredient 1"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextLightGrey" />

                <Button
                    android:id="@+id/subscribe_button_id"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:background="@color/colorBlack"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="✔"
                    android:textColor="@color/colorBackgroundGreen" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/youraccount_textview_id"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"

                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="1 tablespoon"
                    android:textColor="@color/colorTextLightGrey" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>