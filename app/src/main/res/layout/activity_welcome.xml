<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.WelcomeActivity"
    android:background="@color/colorBackgroundBlack"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            android:orientation="vertical"
            android:paddingBottom="90dp">

            <include
                layout="@layout/tool_bar"
                android:id="@+id/toolbar">
            </include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fade_welcome_image"
                    android:paddingBottom="50dp">
                </ImageView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="102dp"
                    android:layout_marginBottom="-42dp"
                    android:src="@drawable/justvegalogo_transparent">

                </ImageView>
            </RelativeLayout>

            <TextView
                android:id="@+id/welcomePage_Welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/welcome_Welcome"
                android:textColor="@color/colorTextWhite"
                android:textSize="26sp">

            </TextView>

            <TextView
                android:id="@+id/welcomePage_MeetUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/welcome_MeetJustVega"
                android:textColor="@color/colorTextGreen"
                android:textSize="16sp">

            </TextView>

            <View style="@style/Divider"
                android:layout_marginTop="10dp">

            </View>

            <TextView
                android:id="@+id/welcomePage_AboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorTextLightGrey"
                android:text="Over Ons"
                android:textSize="17sp"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/welcomePage_AboutUs_text"
                style="@style/WelcomePage_longText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Just Vega is een applicatie ontwikkeld door de volgende personen:
Hoang Nguyen
Afrash Ramjit
Jimmy Balgobiend
Thirza van Hemert
Angelo van Peer
Niek Wijsman
"
                android:textSize="11sp">

            </TextView>

            <View style="@style/Divider"
                android:layout_marginTop="20dp">
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Over Applicatie"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:textColor="@color/colorTextLightGrey"
                android:gravity="center"
                >
            </TextView>

            <TextView
                android:id="@+id/welcomePage_Purpose_text"
                style="@style/WelcomePage_longText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Just Vega is een handige app om vegetarische gerechten op te zoeken en te bekijken. Als gebruiker kun je gerechten sorteren en filteren op specfieke keuzes en kun je ook de ingrediÃ«nten bekijken van de geselecteerde recept."
                android:textSize="11sp">

            </TextView>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/close_WelcomePage"
        android:text="@string/fab_label"
        android:textColor="@color/colorTextWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_margin="16dp"
        android:background="@color/colorBackgroundGreen"
        android:src="@drawable/ic_arrow_up"
        android:onClick="recipeActivity">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</androidx.coordinatorlayout.widget.CoordinatorLayout>