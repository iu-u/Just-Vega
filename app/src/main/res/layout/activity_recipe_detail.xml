<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RecipeDetailActivity"
    android:background="@color/colorBackgroundBlack"
    android:orientation="vertical">


    <include
        layout="@layout/tool_bar"
        android:id="@+id/toolbar">
    </include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:contentDescription="TODO"
            android:id="@+id/recipeimageview"
            android:src="@drawable/faded_ingredients_image"
            >

        </ImageView>
        <Button
            android:id="@+id/detail_return_button"
            android:text="Back to recipes"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/loginbuttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
        <Button
            android:id="@+id/detail_ingredients_button"
            android:text="ingredients"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
           android:layout_marginStart="260dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"

            android:background="@drawable/loginbuttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5" />
        <TextView
            android:id="@+id/categoryrecipe"
            android:text="categoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="90dp"
            android:layout_marginTop="250dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/recipeName"
            android:text="recipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="90dp"
            android:layout_marginTop="280dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="25sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/applicationframehost_2"
            android:layout_marginStart="140dp">
        </ImageView>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/applicationframehost_1"
    android:layout_marginEnd="140dp"
    android:id="@+id/playButton"
    android:clickable="true"
   >

</ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp">
        <ImageView
            android:id="@+id/timer_detail"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/clocksicon"/>
        <TextView
            android:text="45 min"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/colorTextWhite"
            android:textSize="25sp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/readrecipebtn"
            android:text="Read recipe"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="5" />

    </LinearLayout>


</LinearLayout>









