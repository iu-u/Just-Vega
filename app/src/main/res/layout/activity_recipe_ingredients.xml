<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlack"
    android:orientation="vertical">

    <include
        layout="@layout/tool_bar"
        android:id="@+id/toolbar">
    </include>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/recipe_ingredients_image"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/faded_ingredients_image">

        </ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_back"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            >
        </ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left_green"
            android:layout_marginTop="25dp"
            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextGreen"
            android:fontFamily="@font/poppins_light"
            android:textSize="12sp"
            android:text="BACK TO THE RECIPE"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredients_textview1"
            android:text="Ingredients"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="13dp"
            android:layout_marginTop="150dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="26sp"
            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredients_textview2"
            android:text="-for-"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="60dp"
            android:layout_marginTop="200dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="14sp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ingredients_decrease_people_butt"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:layout_marginTop="220dp"
                android:layout_marginStart="10dp"
                android:clickable="true">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ingredients_textview_people"
                android:text="2 People"
                android:fontFamily="@font/poppins_light"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorTextGreen"
                android:textSize="15sp">
            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ingredients_increase_people_butt"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                >

            </ImageView>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredients_add_shopping_list_butt"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="150dp"
            android:clickable="true"
            >


        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="190dp"
            android:fontFamily="@font/poppins_light"
            android:text="ADD ALL \n TO SHOPPING \n LIST"
            android:textColor="@color/colorTextGreen"
            android:textSize="13sp"
            android:gravity="center">

        </TextView>

    </RelativeLayout>

</LinearLayout>