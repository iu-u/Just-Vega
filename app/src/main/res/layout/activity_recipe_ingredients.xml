<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlack"
    android:orientation="vertical">

    <include
        layout="@layout/tool_bar"
        android:id="@+id/toolbar">
    </include>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/recipe_ingredients_image"
            >

        </ImageView>
        <Button
            android:id="@+id/ingredients_return_button"
            android:text="Back to recipe"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/loginbuttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5">

        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredients_textview1"
            android:text="Ingredients"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="13dp"
            android:layout_marginTop="150dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="26sp"
            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredients_textview2"
            android:text="-for-"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="60dp"
            android:layout_marginTop="200dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="14sp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ingredients_decrease_people_butt"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:layout_marginTop="220dp"
                android:layout_marginStart="10dp"
                android:clickable="true">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ingredients_textview_people"
                android:text="2 People"
                android:fontFamily="@font/poppins_light"
                android:layout_marginTop="220dp"
                android:textColor="@color/colorTextGreen"
                android:textSize="20sp">
            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ingredients_increase_people_butt"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_marginTop="220dp"
                android:clickable="true"
                >

            </ImageView>
            
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>