<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">
<LinearLayout
    android:id="@+id/ingredientScreen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical">

    <include
        layout="@layout/tool_bar"
        android:id="@+id/toolbar">
    </include>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <ImageView
            android:id="@+id/recipe_ingredients_image"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/faded_ingredients_image"
            android:scaleType="fitStart">

        </ImageView>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fade"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@drawable/rectangle_back"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_arrow_left_green">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_light"
            android:text="BACK TO THE RECIPE"
            android:textColor="@color/colorTextGreen"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:id="@+id/ingredients_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/poppins_light"
            android:text="Ingredients"
            android:textColor="@color/colorTextWhite"
            android:textSize="26sp">

        </TextView>

        <TextView
            android:id="@+id/ingredients_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="-for-"
            android:textColor="@color/colorTextWhite"
            android:textSize="14sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ingredients_decrease_people_butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="220dp"
                android:clickable="true"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"></ImageView>

            <TextView
                android:id="@+id/ingredients_textview_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="220dp"
                android:fontFamily="@font/poppins_light"
                android:text="2 People"
                android:textColor="@color/colorTextGreen"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/ingredients_increase_people_butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="220dp"
                android:clickable="true"
                android:src="@drawable/ic_add_circle_outline_black_24dp">

            </ImageView>

        </LinearLayout>

        <ImageView
            android:id="@+id/ingredients_add_shopping_list_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="150dp"
            android:clickable="true"
            android:src="@drawable/ic_add_circle_outline_black_24dp">


        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="190dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="ADD ALL \n TO SHOPPING \n LIST"
            android:textColor="@color/colorTextGreen"
            android:textSize="13sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredients_add_shopping_list_butt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ingredients_add_shopping_list_butt" />


    </RelativeLayout>




</LinearLayout>
</ScrollView>