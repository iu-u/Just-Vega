<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="MyTheme" parent="AppTheme">
        <item name="android:windowBackground">#110F0E</item>
        <item name="android:textColor">@color/colorTextLightGrey</item>

    </style>

    <style name="Divider">
        <item name="android:background">@color/colorDividerGreen</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Divider2">
        <item name="android:background">@color/colorDividerGreen</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="WelcomePage_longText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextLightGrey</item>
    </style>

    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="errorTextAppearance">@style/AppTheme.TextErrorAppearance</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_black_24dp</item>
        <item name="android:queryHint">@string/search_by_recipe</item>
        <item name="android:hint">@string/search_by_recipe</item>
        <item name="android:editTextColor">@color/colorTextWhite</item>
        <item name="android:textColorHint">@color/colorTextWhite</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AutoComplete">
        <item name="colorControlActivated">@color/colorBackgroundGreen</item>
        <item name="colorControlNormal">@color/colorBackgroundGreen</item>
        <item name="android:hint">@string/search_by_ingredient</item>
        <item name="android:textColorHint">@color/colorTextWhite</item>
        <item name="android:editTextColor">@color/colorTextWhite</item>
        <item name="android:textColor">@color/colorTextLightGrey</item>
        <item name="android:drawableLeft">@drawable/ic_search_black_24dp</item>
    </style>

    <style name="Spinner">
        <item name="android:dropDownVerticalOffset">50dp</item>
        <item name="dropdownListPreferredItemHeight">20dp</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
    </style>

    <style name="IngredientItem" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:drawableRight">@drawable/ic_close_green</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="FilterPopUp" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="checkBox">
        <item name="android:textColor">@color/colorTextLightGrey</item>
        <item name="android:textColorHighlight">@color/colorTextWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="progressBarTimer" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
<!--        <item name="android:indeterminate">true</item>-->
        <item name="backgroundColor">@color/colorBlack</item>
    </style>

    <style name="TimerButton" parent="Widget.AppCompat.Button">
        <item name="backgroundColor">@color/fui_transparent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:drawableLeft">@drawable/ic_play_arrow_green</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TimerTextView">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:background">@color/colorVagueGreen</item>
    </style>

</resources>
